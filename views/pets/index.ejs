<div class="container-fluid">
  <div class=row>
    <div class="col col-md-12">
      <a href="create" class="btn btn-primary new">
        Create a new Pet
      </a>

      <h2>Recent entries</h2>
      <p>There are
        <%= pets.length %> pets.
        <br>
      </p>
      <% for (let i = pets.length-1; i >= 0; i--) {   
        pet = pets[i];   %>

      <div class="panel panel-default">
        <div class="panel-heading"></div>
        <div class="text-muted pull-right"></div>
        <div class="panel-body">

          <br> ID: <%=  pet._id %>
          <br> Name: <%=pet.name%>
          <br> Birthdate: <%=pet.birthDate%>
          <br> Friendly?: <%=pet.friendly%>

          <hr>
          <a href="/pets/delete/<%= pet._id  %>" class="btn btn-danger"> Delete </a>
          <a href="/pets/details/<%= pet._id %>" class="btn btn-info"> Details </a>
          <a href="/pets/edit/<%= pet._id %>" class="btn btn-primary"> Edit </a>
          <hr>
          <hr>
        </div>
      </div>
      <% } %>

    </div>
  </div>
</div>