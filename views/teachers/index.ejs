<div class="container-fluid">
  <div class=row>
    <div class="col col-md-12">
      <a href="create" class="btn btn-primary new">
        Create a new Teacher
      </a>

      <h2>Recent entries</h2>
      <p>There are
        <%= teachers.length %> teachers.
        <br>
      </p>
      <% for (let i = teachers.length-1; i >= 0; i--) {   
        teacher = teachers[i];   %>

      <div class="panel panel-default">
        <div class="panel-heading"></div>
        <div class="text-muted pull-right"></div>
        <div class="panel-body">

          <br> ID: <%=  teacher._id %>
          <br> Email: <%=teacher.email%>
          <br> Given: <%=teacher.given%>
          <br> Family: <%=teacher.family%>
          <br> Salray: <%=teacher.salary%>
          <br> GitHub: <%=teacher.github%>

          <hr>
          <a href="/teachers/delete/<%= teacher._id  %>" class="btn btn-danger"> Delete </a>
          <a href="/teachers/details/<%= teacher._id %>" class="btn btn-info"> Details </a>
          <a href="/teachers/edit/<%= teacher._id %>" class="btn btn-primary"> Edit </a>
          <hr>
          <hr>
        </div>
      </div>
      <% } %>

    </div>
  </div>
</div>